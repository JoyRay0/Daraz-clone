<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.Fg_add_mobile_number"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/img_verify_number"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/cd_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#9EEFE0E0"
            >

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/sp_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                />

        </androidx.cardview.widget.CardView>


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/ed_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#000"
            android:hint="Mobile number"
            android:fontFamily="@font/roboto"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:padding="12dp"
            android:background="@drawable/sh_edit_text"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@id/cd_spinner"
            />

    </RelativeLayout>



    <androidx.cardview.widget.CardView
        android:id="@+id/cd_verify"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:cardBackgroundColor="#4CAF50"
        app:cardElevation="3dp"
        app:cardCornerRadius="15dp"
        android:layout_gravity="center"
        android:tooltipText="Reset"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verify"
            android:textSize="17sp"
            android:textColor="#fff"
            android:fontFamily="@font/roboto"
            android:padding="12dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_gravity="center"
            />

    </androidx.cardview.widget.CardView>

</LinearLayout>