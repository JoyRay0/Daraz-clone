<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.Fg_change_email">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/img_edit_email"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            />


        <!-- old email-->
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/ed_old"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#000"
            android:hint="Old"
            android:fontFamily="@font/roboto"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:padding="12dp"
            android:background="@drawable/sh_edit_text"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="30dp"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="12dp"
            android:autofillHints="emailAddress"
            />

        <!-- new email-->
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/ed_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#000"
            android:hint="New"
            android:fontFamily="@font/roboto"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:padding="12dp"
            android:background="@drawable/sh_edit_text"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="30dp"
            android:drawableStart="@drawable/ic_number"
            android:drawablePadding="12dp"
            />


        <androidx.cardview.widget.CardView
            android:id="@+id/cd_change"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:cardBackgroundColor="#9C27B0"
            app:cardElevation="3dp"
            app:cardCornerRadius="15dp"
            android:layout_gravity="center"
            android:tooltipText="change your email"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change"
                android:textSize="17sp"
                android:textColor="#fff"
                android:fontFamily="@font/roboto"
                android:padding="12dp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_gravity="center"
                />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>