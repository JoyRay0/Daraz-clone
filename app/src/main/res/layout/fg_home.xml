<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.Fg_home"
    android:orientation="vertical">

    <!-- toolbar -->
    <FrameLayout
        android:id="@+id/fl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        >
        <include layout="@layout/lay_home_toolbar"/>

    </FrameLayout>
    <!-- toolbar -->

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fl_toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <!-- item images -->
            <FrameLayout
                android:id="@+id/fl_item_image_loading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                >

                <include layout="@layout/lay_item_images_loading"/>

            </FrameLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:visibility="gone"
                />
            <!-- coupon -->
            <FrameLayout
                android:id="@+id/fl_coupon"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:visibility="visible"
                >

                <include layout="@layout/lay_new_user_coupon"/>

            </FrameLayout>

            <!-- viewpager -->
            <FrameLayout
                android:id="@+id/fl_vp_image_loading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                >

                <include layout="@layout/lay_vp_image_loading"/>

            </FrameLayout>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vp_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:visibility="gone"
                />

            <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
                android:id="@+id/dotsIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:dotsColor="#E6D1D1"
                app:dotsSize="10dp"
                app:dotsSpacing="5dp"
                app:dotsStrokeColor="#10D3EB"
                android:layout_marginTop="-30dp"
                android:visibility="gone"
                />

            <!-- flash sale -->
            <FrameLayout
                android:id="@+id/fl_flash_sale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="15dp"
                >

                <include layout="@layout/lay_flash_sale_img"/>

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#A9D1B8B8"
                android:layout_marginTop="8dp"
                />

            <!-- categories -->
            <FrameLayout
                android:id="@+id/fl_categories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_marginTop="15dp"
                >

                <include layout="@layout/lay_categories_images"/>

            </FrameLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>