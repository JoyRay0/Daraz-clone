<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.Fg_home_cart"

    >

    <FrameLayout
        android:id="@+id/fl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        >

        <include layout="@layout/lay_toolbar_cart"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/fl_toolbar"
        >

        <!-- empty cart -->
        <LinearLayout
            android:id="@+id/ll_empty_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:lottie_rawRes="@raw/cart"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="There are no items in this cart"
                android:textSize="13sp"
                android:gravity="center"
                android:textColor="#AB9A9A"
                android:textStyle="normal"
                android:fontFamily="@font/roboto"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btn_start_shopping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="continue shopping"
                android:textColor="#FF5722"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="7dp"
                android:elevation="5dp"
                android:background="@drawable/sh_cart_continue_shopping_btn"
                android:tooltipText="Continue your shopping"
                />

        </LinearLayout>

        <androidx.compose.ui.platform.ComposeView
            android:id="@+id/cv_cart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            />

    </LinearLayout>


</RelativeLayout>