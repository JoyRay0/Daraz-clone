<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.Fg_setting_account_info"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#fff"
        android:layout_margin="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <!-- full name -->
            <RelativeLayout
                android:id="@+id/rl_full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="?attr/selectableItemBackground"
                >

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_full_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Name"
                    android:textSize="14sp"
                    android:textColor="#000"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Guest"
                    android:textSize="14sp"
                    android:textColor="#806767"
                    android:gravity="center"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:drawableEnd="@drawable/ic_forword"
                    />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F3D1D1"
                />

            <!-- change password -->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_change_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:textSize="14sp"
                android:textColor="#000"
                android:gravity="start|center"
                android:drawableEnd="@drawable/ic_forword"
                android:padding="12dp"
                android:background="?attr/selectableItemBackground"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F3D1D1"
                />

            <!-- enable quick login -->
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/sc_qucik_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enable Qucik Login"
                android:textSize="14sp"
                android:textColor="#000"
                android:gravity="start|center"
                android:checked="false"
                app:trackTint="@drawable/sel_switch_track_color"
                app:thumbTint="@drawable/sel_switch_thumb_color"
                android:padding="12dp"

                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#fff"
        android:layout_margin="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <!-- add mobile number -->
            <RelativeLayout
                android:id="@+id/rl_add_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="?attr/selectableItemBackground"
                >

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Mobile Number"
                    android:textSize="14sp"
                    android:textColor="#000"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_mobile_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Set"
                    android:textSize="14sp"
                    android:textColor="#806767"
                    android:gravity="center"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:drawableEnd="@drawable/ic_forword"
                    />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F3D1D1"
                />

            <!-- change email -->
            <RelativeLayout
                android:id="@+id/rl_change_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="?attr/selectableItemBackground"
                >

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change Email"
                    android:textSize="14sp"
                    android:textColor="#000"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_change_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Set"
                    android:textSize="14sp"
                    android:textColor="#806767"
                    android:gravity="center"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:drawableEnd="@drawable/ic_forword"
                    />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F3D1D1"
                />

            <!-- Gender -->
            <RelativeLayout
                android:id="@+id/rl_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="?attr/selectableItemBackground"
                >

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textSize="14sp"
                    android:textColor="#000"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Set"
                    android:textSize="14sp"
                    android:textColor="#806767"
                    android:gravity="center"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:drawableEnd="@drawable/ic_forword"
                    />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F3D1D1"
                />

            <!-- birthday-->
            <RelativeLayout
                android:id="@+id/rl_birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="?attr/selectableItemBackground"
                >

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Birthday"
                    android:textSize="14sp"
                    android:textColor="#000"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Set"
                    android:textSize="14sp"
                    android:textColor="#806767"
                    android:gravity="center"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:drawableEnd="@drawable/ic_forword"
                    />

            </RelativeLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>