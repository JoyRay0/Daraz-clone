<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.Fg_account_security">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="13dp"
        android:layout_margin="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_system_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="System Setting"
                android:textSize="15sp"
                android:fontFamily="@font/roboto"
                android:textColor="#000"
                android:padding="10dp"
                android:drawableEnd="@drawable/ic_forword"
                android:background="?attr/selectableItemBackground"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDCBCB"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_account_delection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Account Delection"
                android:textSize="15sp"
                android:textColor="#000"
                android:fontFamily="@font/roboto"
                android:padding="10dp"
                android:drawableEnd="@drawable/ic_forword"
                android:background="?attr/selectableItemBackground"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>