<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.Fg_setting_feedback"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello Guest"
            android:textSize="16sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="end"
            android:layout_margin="15dp"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How can we help you?"
            android:textSize="20sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_margin="5dp"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#fff"
            app:cardElevation="4dp"
            app:cardCornerRadius="16dp"
            android:layout_margin="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                >

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Daraz takes care of customer service"
                    android:textSize="17sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="including :"
                    android:textSize="17sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Order, Payment, Delivery issues"
                    android:textSize="15sp"
                    android:textColor="#726A6A"
                    android:textStyle="bold"
                    android:gravity="start|center"
                    android:padding="12dp"
                    android:drawableStart="@drawable/ic_shopping_bag"
                    android:drawablePadding="7dp"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Unauthorized transaction, Fraud, Scam"
                    android:textSize="15sp"
                    android:textColor="#726A6A"
                    android:textStyle="bold"
                    android:gravity="start|center"
                    android:padding="12dp"
                    android:drawableStart="@drawable/ic_bad"
                    android:drawablePadding="7dp"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Customer service agent"
                    android:textSize="15sp"
                    android:textColor="#726A6A"
                    android:textStyle="bold"
                    android:gravity="start|center"
                    android:padding="12dp"
                    android:drawableStart="@drawable/ic_customer_service"
                    android:drawablePadding="7dp"
                    />

                <!-- button -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_ask_for_help"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#FF5722"
                    app:cardCornerRadius="13dp"
                    app:cardElevation="2dp"
                    android:layout_margin="10dp"
                    >

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ask For Help"
                        android:textSize="15sp"
                        android:textColor="#fff"
                        android:fontFamily="@font/roboto"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:padding="10dp"
                        />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#fff"
            android:layout_margin="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                >

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other Feedback"
                    android:textSize="17sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp"
                    android:weightSum="2"
                    >

                    <!-- page error -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_page_error"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#F6F3F3"
                        app:cardCornerRadius="13dp"
                        app:cardElevation="0dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        >

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Page Error"
                            android:textSize="13sp"
                            android:textColor="#000"
                            android:fontFamily="@font/roboto"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:padding="10dp"
                            android:drawableStart="@drawable/ic_warning"
                            android:drawableEnd="@drawable/ic_forword"
                            />

                    </androidx.cardview.widget.CardView>

                    <!-- page error -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_suggestions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#F6F3F3"
                        app:cardCornerRadius="13dp"
                        app:cardElevation="0dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        >

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Suggestions"
                            android:textSize="13sp"
                            android:textColor="#000"
                            android:fontFamily="@font/roboto"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:padding="10dp"
                            android:drawableStart="@drawable/ic_discussion"
                            android:drawableEnd="@drawable/ic_forword"
                            />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>


</RelativeLayout>