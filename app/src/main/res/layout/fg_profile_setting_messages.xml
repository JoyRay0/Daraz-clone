<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".View_MVP.fragment.Fg_home_profile_setting_messages">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="13dp"
                android:layout_margin="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="App Notification"
                        android:textSize="18sp"
                        android:textColor="#887A7A"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        />

                    <!-- promotions -->
                    <RelativeLayout
                        android:id="@+id/rl_promotions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        >

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_promo_B"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Promotions"
                            android:textSize="16sp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:fontFamily="@font/roboto"
                            android:layout_marginStart="10dp"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_promo_S"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:text="Be the first to find out about our upcoming deals"
                            android:textSize="13sp"
                            android:textColor="#000"
                            android:fontFamily="@font/roboto"
                            android:layout_marginTop="3dp"
                            android:layout_marginStart="10dp"
                            android:layout_below="@id/tv_promo_B"
                            />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/sc_promo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            app:trackTint="@drawable/sel_switch_track_color"
                            app:thumbTint="@drawable/sel_switch_thumb_color"
                            android:checked="false"
                            />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F3D1D1"
                        />

                    <!-- orders -->
                    <RelativeLayout
                        android:id="@+id/rl_orders"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        >

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_orders_B"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Orders"
                            android:textSize="16sp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:fontFamily="@font/roboto"
                            android:layout_marginStart="10dp"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_order_S"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Get the latest status on your order"
                            android:textSize="13sp"
                            android:textColor="#000"
                            android:fontFamily="@font/roboto"
                            android:layout_marginTop="3dp"
                            android:layout_marginStart="10dp"
                            android:layout_below="@id/tv_orders_B"
                            />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/sc_order"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            app:trackTint="@drawable/sel_switch_track_color"
                            app:thumbTint="@drawable/sel_switch_thumb_color"
                            android:checked="true"
                            />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F3D1D1"
                        />

                    <!-- activities -->
                    <RelativeLayout
                        android:id="@+id/rl_activities"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        >

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_act_B"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Activities"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:fontFamily="@font/roboto"
                            android:layout_marginStart="10dp"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_act_S"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:text="Updates on price drops, Feed and other in app events"
                            android:textSize="13sp"
                            android:textColor="#000"
                            android:fontFamily="@font/roboto"
                            android:layout_marginTop="3dp"
                            android:layout_marginStart="10dp"
                            android:layout_below="@id/tv_act_B"
                            />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/sc_act"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            app:trackTint="@drawable/sel_switch_track_color"
                            app:thumbTint="@drawable/sel_switch_thumb_color"
                            android:checked="true"
                            />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F3D1D1"
                        />

                    <!-- photo -->
                    <RelativeLayout
                        android:id="@+id/rl_seller"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        >

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_seller_B"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Seller promo"
                            android:textSize="16sp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:fontFamily="@font/roboto"
                            android:layout_marginStart="10dp"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_seller_S"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:text="Get notified about the promotion and voucher from seller"
                            android:textSize="13sp"
                            android:textColor="#000"
                            android:fontFamily="@font/roboto"
                            android:layout_marginTop="3dp"
                            android:layout_marginStart="10dp"
                            android:layout_below="@id/tv_seller_B"
                            />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/sc_seller"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            app:trackTint="@drawable/sel_switch_track_color"
                            app:thumbTint="@drawable/sel_switch_thumb_color"
                            android:checked="false"
                            />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F3D1D1"
                        />

                    <!-- chat -->
                    <RelativeLayout
                        android:id="@+id/rl_chat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        >

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_chat_B"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chat"
                            android:textSize="16sp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:fontFamily="@font/roboto"
                            android:layout_marginStart="10dp"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_chat_S"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:text="Get notified when you receive a private chat message"
                            android:textSize="13sp"
                            android:textColor="#000"
                            android:fontFamily="@font/roboto"
                            android:layout_marginTop="3dp"
                            android:layout_marginStart="10dp"
                            android:layout_below="@id/tv_chat_B"
                            />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/sc_chat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            app:trackTint="@drawable/sel_switch_track_color"
                            app:thumbTint="@drawable/sel_switch_thumb_color"
                            android:checked="true"
                            />

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="13dp"
                android:layout_margin="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Other Channels"
                        android:textSize="18sp"
                        android:textColor="#887A7A"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        />

                    <!-- email -->
                    <RelativeLayout
                        android:id="@+id/rl_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        >

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_emailB"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textSize="16sp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:fontFamily="@font/roboto"
                            android:layout_marginStart="10dp"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_loc_S"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:text="Receive our E-newsletters and handpicked recommendations via email"
                            android:textSize="13sp"
                            android:textColor="#000"
                            android:fontFamily="@font/roboto"
                            android:layout_marginTop="3dp"
                            android:layout_marginStart="10dp"
                            android:layout_below="@id/tv_emailB"
                            />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/sc_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            app:trackTint="@drawable/sel_switch_track_color"
                            app:thumbTint="@drawable/sel_switch_thumb_color"
                            android:checked="false"
                            />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F3D1D1"
                        />

                    <!-- sms -->
                    <RelativeLayout
                        android:id="@+id/rl_sms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        >

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_sms_B"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SMS"
                            android:textSize="16sp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:fontFamily="@font/roboto"
                            android:layout_marginStart="10dp"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_mic_S"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:text="Receive our extra special , not-to-be-missed offers via SMS"
                            android:textSize="13sp"
                            android:textColor="#000"
                            android:fontFamily="@font/roboto"
                            android:layout_marginTop="3dp"
                            android:layout_marginStart="10dp"
                            android:layout_below="@id/tv_sms_B"
                            />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/sc_sms"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            app:trackTint="@drawable/sel_switch_track_color"
                            app:thumbTint="@drawable/sel_switch_thumb_color"
                            android:checked="false"
                            />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F3D1D1"
                        />

                    <!-- whatsapp -->
                    <RelativeLayout
                        android:id="@+id/rl_whatsapp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        >

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_whatsapp_B"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Whats App"
                            android:textSize="16sp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:fontFamily="@font/roboto"
                            android:layout_marginStart="10dp"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_whatsapp_S"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Receive promos message via Whats App"
                            android:textSize="13sp"
                            android:textColor="#000"
                            android:fontFamily="@font/roboto"
                            android:layout_marginTop="3dp"
                            android:layout_marginStart="10dp"
                            android:layout_below="@id/tv_whatsapp_B"
                            />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/sc_whatsapp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            app:trackTint="@drawable/sel_switch_track_color"
                            app:thumbTint="@drawable/sel_switch_thumb_color"
                            android:checked="false"
                            />

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>