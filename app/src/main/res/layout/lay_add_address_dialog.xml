<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#fff"
    app:cardElevation="2dp"
    app:cardCornerRadius="15dp"
    android:layout_margin="10dp"
    >

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recipient's Name *"
                android:textSize="15sp"
                android:textColor="#000"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                android:layout_margin="10dp"
                >

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/ed_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Real name"
                    android:textColorHint="#897676"
                    android:padding="10dp"
                    android:inputType="textPersonName"
                    android:imeOptions="actionNext"
                    android:background="@drawable/sh_add_address_edit_text"

                    />

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone Number *"
                android:textSize="15sp"
                android:textColor="#000"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                android:layout_margin="10dp"
                >

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/ed_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mobile number"
                    android:textColorHint="#897676"
                    android:padding="10dp"
                    android:inputType="number"
                    android:imeOptions="actionNext"
                    android:background="@drawable/sh_add_address_edit_text"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Region *"
                android:textSize="15sp"
                android:textColor="#000"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                android:layout_margin="10dp"

                >

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/ed_region"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Your region"
                    android:textColorHint="#897676"
                    android:padding="10dp"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:background="@drawable/sh_add_address_edit_text"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="City *"
                android:textSize="15sp"
                android:textColor="#000"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                android:layout_margin="10dp"

                >

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/ed_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Your city"
                    android:textColorHint="#897676"
                    android:padding="10dp"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:background="@drawable/sh_add_address_edit_text"
                    />

            </com.google.android.material.textfield.TextInputLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="District *"
                android:textSize="15sp"
                android:textColor="#000"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                android:layout_margin="10dp"

                >

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/ed_district"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Your district"
                    android:textColorHint="#897676"
                    android:padding="10dp"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:background="@drawable/sh_add_address_edit_text"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address *"
                android:textSize="15sp"
                android:textColor="#000"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                android:layout_margin="10dp"

                >

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/ed_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="House no./building/street/area"
                    android:textColorHint="#897676"
                    android:padding="10dp"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:background="@drawable/sh_add_address_edit_text"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Landmark(Optional)"
                android:textSize="15sp"
                android:textColor="#000"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                android:layout_margin="10dp"
                >

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/ed_landmark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Add Additional info"
                    android:textColorHint="#897676"
                    android:padding="10dp"
                    android:inputType="text"
                    android:imeOptions="actionDone"
                    android:background="@drawable/sh_add_address_edit_text"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:weightSum="6"
                >

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address Category"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    />

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/rb_home"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:text="Home"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:background="@drawable/sh_toggle_checked_button"
                    android:textSize="13sp"
                    android:layout_margin="10dp"
                    android:padding="7dp"
                    android:layout_weight="1"
                    android:elevation="0dp"
                    />

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/rb_office"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:text="Office"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:textColor="#000"
                    android:background="@drawable/sh_toggle_not_checked_button"
                    android:textSize="13sp"
                    android:textAllCaps="false"
                    android:layout_margin="10dp"
                    android:padding="7dp"
                    android:layout_weight="1"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:weightSum="6"
                >

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Default Shipping Address"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    />

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/rb_dsa_on"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:text="On"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:textColor="#000"
                    android:background="@drawable/sh_toggle_not_checked_button"
                    android:textSize="13sp"
                    android:textAllCaps="false"
                    android:layout_margin="10dp"
                    android:padding="7dp"
                    android:layout_weight="1"
                    android:elevation="0dp"
                    />

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/rb_dsa_off"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:text="Off"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:background="@drawable/sh_toggle_checked_button"
                    android:textSize="13sp"
                    android:textAllCaps="false"
                    android:layout_margin="10dp"
                    android:padding="7dp"
                    android:layout_weight="1"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:weightSum="6"
                >

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Default Billing Address"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    />

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/rb_dba_on"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:text="On"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:textColor="#000"
                    android:background="@drawable/sh_toggle_not_checked_button"
                    android:textSize="13sp"
                    android:textAllCaps="false"
                    android:layout_margin="10dp"
                    android:padding="7dp"
                    android:layout_weight="1"
                    android:elevation="0dp"
                    />

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/rb_dba_off"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:text="Off"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:background="@drawable/sh_toggle_checked_button"
                    android:textSize="13sp"
                    android:textAllCaps="false"
                    android:layout_margin="10dp"
                    android:padding="7dp"
                    android:layout_weight="1"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_margin="10dp"
                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="13dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#E4D5D2"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    >

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No"
                        android:textColor="#000"
                        android:textSize="17sp"
                        android:padding="10dp"
                        android:gravity="center"
                        />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="13dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FF5722"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    >

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Save"
                        android:textColor="#fff"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:padding="10dp"
                        android:gravity="center"
                        />

                </androidx.cardview.widget.CardView>

            </LinearLayout>



        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.cardview.widget.CardView>