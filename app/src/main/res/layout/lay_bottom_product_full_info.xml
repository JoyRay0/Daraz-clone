<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EACFCF"
        />

    <LinearLayout
        android:id="@+id/ll_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:tooltipText="Store"
        android:background="?attr/selectableItemBackgroundBorderless"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_store"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_store"
            android:layout_gravity="center"
            android:tint="#6F6363"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Store"
            android:textSize="12sp"
            android:textColor="#6F6363"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:layout_gravity="center"

            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/ll_store"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:tooltipText="Chat to Seller"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_chat"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_chat_smile"
            android:layout_gravity="center"
            android:tint="#6F6363"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chat"
            android:textSize="12sp"
            android:textColor="#6F6363"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:layout_gravity="center"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/ll_chat"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_buy_now"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Buy Now"
            android:textSize="14sp"
            android:textColor="#fff"
            app:backgroundTint="#E8A035"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            app:cornerRadius="10dp"
            android:padding="0dp"
            android:layout_weight="1"
            android:layout_margin="3dp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add_cart"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Add to Cart"
            android:textSize="14sp"
            android:textColor="#fff"
            app:backgroundTint="#FF5722"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            app:cornerRadius="10dp"
            android:padding="0dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            />

    </LinearLayout>


</RelativeLayout>