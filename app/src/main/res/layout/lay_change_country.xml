<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="13dp"
    app:cardBackgroundColor="#fff"
    app:cardElevation="2dp"
    android:layout_margin="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Country"
            android:textSize="17sp"
            android:textColor="#6D5B5B"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_margin="10dp"
            />

        <!-- bangladesh -->
        <RelativeLayout
            android:id="@+id/rl_bangladesh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:layout_margin="5dp"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_bd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:layout_alignParentStart="true"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/img_flag_bangladesh"
                    android:scaleType="fitXY"
                    />

            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_bangladesh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bangladesh"
                android:textSize="17sp"
                android:textColor="#000"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/cv_bd"
                android:layout_marginStart="10dp"
                />

           <com.google.android.material.checkbox.MaterialCheckBox
               android:id="@+id/cb_bangladesh"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:checked="true"
               app:buttonTint="#4CAF50"
               app:buttonIconTint="#fff"
               android:layout_alignParentEnd="true"
               />

        </RelativeLayout>

        <!-- sri lanka -->
        <RelativeLayout
            android:id="@+id/rl_sri_lanka"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:layout_margin="5dp"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_lanka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:layout_alignParentStart="true"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/img_flag_sri_lanka"
                    android:scaleType="fitXY"
                    />

            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_sri_lanka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sri Lanka"
                android:textSize="17sp"
                android:textColor="#000"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/cv_lanka"
                android:layout_marginStart="10dp"
                />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/cb_sri_lanka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                app:buttonTint="#4CAF50"
                app:buttonIconTint="#fff"
                android:layout_alignParentEnd="true"
                />

        </RelativeLayout>

        <!-- nepal -->
        <RelativeLayout
            android:id="@+id/rl_nepal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:layout_margin="5dp"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_nepal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:layout_alignParentStart="true"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/img_flag_nepal"
                    android:scaleType="fitXY"
                    />

            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_nepal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nepal"
                android:textSize="17sp"
                android:textColor="#000"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/cv_nepal"
                android:layout_marginStart="10dp"
                />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/cb_nepal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                app:buttonTint="#4CAF50"
                app:buttonIconTint="#fff"
                android:layout_alignParentEnd="true"
                />

        </RelativeLayout>

        <!-- pakistan -->
        <RelativeLayout
            android:id="@+id/rl_pakistan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:layout_margin="5dp"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_pakistan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:layout_alignParentStart="true"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/img_flag_pakistan"
                    android:scaleType="fitXY"
                    />

            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_pakistan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pakistan"
                android:textSize="17sp"
                android:textColor="#000"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/cv_pakistan"
                android:layout_marginStart="10dp"
                />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/cb_pakistan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                app:buttonTint="#4CAF50"
                app:buttonIconTint="#fff"
                android:layout_alignParentEnd="true"
                />

        </RelativeLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:weightSum="2"
           android:layout_margin="10dp"
           >

           <androidx.cardview.widget.CardView
               android:id="@+id/cv_cancel"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:cardCornerRadius="15dp"
               app:cardBackgroundColor="#EDECEC"
               android:layout_weight="1"
               android:layout_margin="10dp"
               app:cardElevation="0dp"
               >
               <androidx.appcompat.widget.AppCompatTextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Cancel"
                   android:textSize="17sp"
                   android:textColor="#776363"
                   android:gravity="center"
                   android:padding="10dp"
                   />

           </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView
               android:id="@+id/cv_save"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:cardCornerRadius="15dp"
               app:cardBackgroundColor="#FF5722"
               android:layout_weight="1"
               android:layout_margin="10dp"
               app:cardElevation="0dp"
               >
               <androidx.appcompat.widget.AppCompatTextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Save"
                   android:textSize="17sp"
                   android:textColor="#fff"
                   android:textStyle="bold"
                   android:gravity="center"
                   android:padding="10dp"
                   />

           </androidx.cardview.widget.CardView>

       </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>