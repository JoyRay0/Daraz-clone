<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:weightSum="5"
    android:background="#fff"
    android:padding="10dp"
    >

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_scan"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_scan"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:background="?attr/actionBarItemBackground"
        android:tooltipText="Scan QR Code"
        />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#fff"
        app:strokeColor="#FF5722"
        app:cardCornerRadius="7dp"
        android:layout_weight="5"
        android:layout_gravity="center"
        app:cardElevation="2dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            >
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_searchBar_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="search today for sale"
                android:textSize="12sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto"
                android:textColor="#423B3B"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:gravity="start|center"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:drawableStart="@drawable/ic_search"
                android:drawablePadding="5dp"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_camera"
                android:layout_margin="5dp"
                android:layout_gravity="center|end"
                android:layout_weight="1"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_search_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Search"
                android:textSize="13sp"
                android:textColor="#fff"
                android:padding="5dp"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:layout_margin="1.8dp"
                android:background="@drawable/sh_tv_search"
                android:layout_gravity="center|end"
                android:layout_weight="1"
                />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_upload"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_upload"
        android:layout_margin="10dp"
        android:layout_gravity="center|end"
        android:layout_weight="2"
        android:background="?attr/actionBarItemBackground"
        android:tooltipText="See your offer"
        />


</LinearLayout>