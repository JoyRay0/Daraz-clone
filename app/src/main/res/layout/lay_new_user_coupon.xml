<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sh_coupon_img_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="3dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_new_coupon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New User Exclusive"
        android:textSize="12sp"
        android:textColor="#000"
        android:textStyle="bold"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:layout_margin="7dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_more_coupon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="More Coupon"
        android:textSize="10sp"
        android:textColor="#FF5722"
        android:textStyle="normal"
        android:fontFamily="@font/roboto"
        android:layout_margin="7dp"
        android:gravity="center"
        android:drawableEnd="@drawable/ic_right"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_more_coupon"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        app:cardCornerRadius="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_coupon_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E8E1E1"
            android:scaleType="fitXY"

            />

    </androidx.cardview.widget.CardView>


</RelativeLayout>