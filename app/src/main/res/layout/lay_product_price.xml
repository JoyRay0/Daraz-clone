<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_tk"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_taka"
            android:layout_centerVertical="true"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_main_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textSize="25sp"
            android:textColor="#FF5722"
            android:textStyle="bold"
            android:fontFamily="@font/roboto"
            android:layout_toEndOf="@id/iv_tk"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="7dp"
            android:layout_centerVertical="true"
            />


        <RelativeLayout
            android:id="@+id/rl_less_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_main_price"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_taka"
                android:tint="#9D8D89"
                android:layout_centerVertical="true"

                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_less_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="14sp"
                android:textColor="#9D8D89"
                android:fontFamily="@font/roboto"
                android:textStyle="normal"
                android:layout_toEndOf="@id/iv_t"
                />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.8dp"
                android:background="#9D8D89"
                android:layout_alignStart="@id/iv_t"
                android:layout_alignEnd="@id/tv_less_price"
                android:layout_centerVertical="true"
                />
            />

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cd_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/rl_less_price"
            android:layout_centerVertical="true"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#4AEBD0D0"
            android:layout_marginStart="5dp"

            >

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-0"
                android:fontFamily="@font/roboto"
                android:textSize="14sp"
                android:textColor="#FF5722"
                android:layout_margin="2dp"
                android:drawableEnd="@drawable/ic_discount"
                />

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="title"
        android:textSize="16sp"
        android:textColor="#000"
        android:textStyle="bold"
        android:maxLines="2"
        android:ellipsize="end"
        android:fontFamily="@font/roboto"
        />

    <!-- rating and review -->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_rating"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_rating"
            android:tint="#8BC34A"
            android:layout_centerVertical="true"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:textSize="12sp"
            android:textColor="#000"
            android:fontFamily="@font/roboto"
            android:layout_toEndOf="@id/iv_rating"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_rating_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(0)"
            android:textSize="12sp"
            android:textColor="#000"
            android:fontFamily="@font/roboto"
            android:layout_toEndOf="@id/tv_rating"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            />

        <View
            android:id="@+id/v_divider"
            android:layout_width="0.7dp"
            android:layout_height="15dp"
            android:background="#625A5A"
            android:layout_toEndOf="@id/tv_rating_count"
            android:layout_marginStart="7dp"
            android:layout_centerVertical="true"
            />

        <!-- stock item -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_in_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In Stock"
            android:textSize="12sp"
            android:textColor="#000"
            android:fontFamily="@font/roboto"
            android:layout_toEndOf="@id/v_divider"
            android:layout_centerVertical="true"
            android:layout_marginStart="7dp"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_stock_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(0)"
            android:textSize="12sp"
            android:textColor="#000"
            android:fontFamily="@font/roboto"
            android:layout_toEndOf="@id/tv_in_stock"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            />
        <!-- stock item -->

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_share2"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:src="@drawable/ic_share2"
            android:tint="#625A5A"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_wishlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_love_outline"
            android:tint="#625A5A"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/iv_share2"
            android:layout_margin="10dp"
            />

    </RelativeLayout>

    <!-- product brand -->

    <RelativeLayout
        android:id="@+id/rl_brand_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        >

       <androidx.appcompat.widget.AppCompatTextView
           android:id="@+id/tv_delivery"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Delivery time"
           android:textSize="14sp"
           android:textColor="#000"
           android:fontFamily="@font/roboto"
           android:textFontWeight="350"
           android:drawablePadding="7dp"
           android:drawableStart="@drawable/ic_delivery_box"
           android:layout_toStartOf="@+id/iv_brand_right"
           />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Standard Delivery"
            android:textSize="10sp"
            android:textColor="#625A5A"
            android:layout_below="@+id/tv_delivery"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"

            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_brand_right"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_right"
            android:tint="#625A5A"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <!-- return -->

    <RelativeLayout
        android:id="@+id/rl_price_return_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        >
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_best_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Best Price"
            android:textSize="14sp"
            android:textColor="#000"
            android:fontFamily="@font/roboto"
            android:textFontWeight="350"
            android:drawableStart="@drawable/ic_ok"
            android:drawablePadding="7dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_centerVertical="true"
            />

        <View
            android:id="@+id/v_divider2"
            android:layout_width="0.7dp"
            android:layout_height="15dp"
            android:background="#000"
            android:layout_toEndOf="@id/tv_best_price"
            android:layout_centerVertical="true"
            android:layout_marginStart="7dp"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_return_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Return Policy"
            android:textSize="14sp"
            android:textColor="#000"
            android:fontFamily="@font/roboto"
            android:paddingTop="5dp"
            android:textFontWeight="350"
            android:paddingBottom="5dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/v_divider2"
            android:layout_marginStart="7dp"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_return_right"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_right"
            android:tint="#625A5A"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>



</LinearLayout>