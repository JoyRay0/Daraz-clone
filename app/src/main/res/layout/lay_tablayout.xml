<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="9"
        android:background="#3CBDB5D5"
        >

        <!-- for you -->
        <LinearLayout
            android:id="@+id/ll_for_you"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_for_you"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="For You"
                android:textSize="12sp"
                android:textColor="#5B4949"
                android:textStyle="normal"
                android:gravity="center"
                android:layout_gravity="center"
                android:drawableStart="@drawable/ic_daraz"
                android:drawablePadding="5dp"
                android:padding="5dp"
                />

        </LinearLayout>

        <!-- Hot deals -->
        <LinearLayout
            android:id="@+id/ll_hot_deals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_hot_deals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hot Deals"
                android:textSize="12sp"
                android:textColor="#5B4949"
                android:gravity="center"
                android:textStyle="normal"
                android:padding="5dp"
                android:layout_gravity="center"
                android:drawableStart="@drawable/ic_star"
                android:drawablePadding="5dp"
                />

        </LinearLayout>

        <!-- voucher max -->
        <LinearLayout
            android:id="@+id/ll_voucher_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_voucher_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voucher Max"
                android:textSize="12sp"
                android:textColor="#5B4949"
                android:textStyle="normal"
                android:gravity="center"
                android:padding="5dp"
                android:layout_gravity="center"
                android:drawableStart="@drawable/ic_voucher"
                android:drawablePadding="5dp"
                />

        </LinearLayout>

        <!-- daraz look -->
        <LinearLayout
            android:id="@+id/ll_daraz_look"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_daraz_look"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daraz Look"
                android:textSize="12sp"
                android:textColor="#5B4949"
                android:gravity="center"
                android:textStyle="normal"
                android:padding="5dp"
                android:layout_gravity="center"
                android:drawableStart="@drawable/ic_look"
                android:drawablePadding="5dp"
                />

        </LinearLayout>

        <!-- free delivery -->
        <LinearLayout
            android:id="@+id/ll_free_delivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_free_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Free Delivery"
                android:textSize="12sp"
                android:textColor="#5B4949"
                android:gravity="center"
                android:textStyle="normal"
                android:padding="5dp"
                android:layout_gravity="center"
                android:drawableStart="@drawable/ic_delivery_tab"
                android:drawablePadding="5dp"
                />

        </LinearLayout>

        <!-- buy any 4 -->
        <LinearLayout
            android:id="@+id/ll_buy_any"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_buy_any"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buy Any 4"
                android:textSize="12sp"
                android:textColor="#5B4949"
                android:gravity="center"
                android:textStyle="normal"
                android:padding="5dp"
                android:layout_gravity="center"
                android:drawableStart="@drawable/ic_choice"
                android:drawablePadding="5dp"
                />

        </LinearLayout>

        <!-- buy more save more -->
        <LinearLayout
            android:id="@+id/ll_buy_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_buy_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buy More Save More"
                android:textSize="12sp"
                android:textColor="#5B4949"
                android:textStyle="normal"
                android:padding="5dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:drawableStart="@drawable/ic_save_mony"
                android:drawablePadding="5dp"
                />

        </LinearLayout>

        <!-- new arrival  -->
        <LinearLayout
            android:id="@+id/ll_new_arrival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_new_arrival"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Arrival"
                android:textSize="12sp"
                android:textColor="#5B4949"
                android:gravity="center"
                android:textStyle="normal"
                android:padding="5dp"
                android:layout_gravity="center"
                android:drawableStart="@drawable/ic_new"
                android:drawablePadding="5dp"
                />

        </LinearLayout>

        <!-- must buy-->
        <LinearLayout
            android:id="@+id/ll_must_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_must_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Must Buy"
                android:textSize="12sp"
                android:textColor="#5B4949"
                android:textStyle="normal"
                android:gravity="center"
                android:padding="5dp"
                android:layout_gravity="center"
                android:drawableStart="@drawable/ic_love"
                android:drawablePadding="5dp"
                />

        </LinearLayout>

    </LinearLayout>

</HorizontalScrollView>